{
  "name": "winpilot",
  "version": "0.1.0",
  "description": "Control your Windows desktop with natural language using the GitHub Copilot SDK",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaitanyame/winpilot.git"
  },
  "bugs": {
    "url": "https://github.com/chaitanyame/winpilot/issues"
  },
  "homepage": "https://github.com/chaitanyame/winpilot#readme",
  "scripts": {
    "dev": "vite",
    "dev:wait": "wait-on http://localhost:5173 && npm run dev",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "preview": "vite preview",
    "electron:dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3",
    "postinstall": "npx @electron/rebuild -w better-sqlite3 2>/dev/null || true",
    "train:generate-data": "ts-node training/generate-data.ts",
    "train:model": "ts-node training/train-model.ts",
    "train:all": "npm run train:generate-data && npm run train:model"
  },
  "keywords": [
    "desktop",
    "commander",
    "copilot",
    "ai",
    "natural-language",
    "electron"
  ],
  "author": "Chaitanya Me",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.20",
    "@types/better-sqlite3": "^7.6.13",
    "@types/menubar": "^5.1.6",
    "better-sqlite3": "^11.10.0",
    "clipboard-event": "^1.6.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "menubar": "^9.5.2",
    "natural": "^8.1.0",
    "node-cron": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "whisper-node": "^1.1.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1",
    "zustand": "^4.4.7"
  },
  "optionalDependencies": {
    "fasttext-node": "^1.1.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
